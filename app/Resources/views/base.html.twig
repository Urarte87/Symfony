<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}En construccion{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{asset('bundles/mytelemedicine/css/bootstrap.min.css')}}" rel="stylesheet">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body style="padding-top: 70px;">
        {% block body %}
            <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="../index">Telemedicina</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            {% if 'index' in path(app.request.attributes.get('_route')) %}
            <li class="active"><a href="../index">Home</a></li>
            {% else %}
            <li><a href="../index">Home</a></li>
            {% endif %}
            
            {% if 'telemetry' in path(app.request.attributes.get('_route')) %}
            <li class="active"><a href="../telemetry">Telemetria</a></li>
            {% else %}
            <li><a href="../telemetry">Telemetria</a></li>
            {% endif %}
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
    <div class="container">
    {% block container %}
    {% endblock %}
    </div><!-- /.container -->
        {% endblock %}
        {% block javascripts %}
            <script src="{{asset('bundles/mytelemedicine/js/jquery.min.js')}}"></script>
            <script src="{{asset('bundles/mytelemedicine/js/bootstrap.min.js')}}"></script>
        {% endblock %}
    </body>
    <footer style="text-align:center;">{% block footer %}Contacto: {{ contact_email }}{% endblock %}</footer>
</html>
